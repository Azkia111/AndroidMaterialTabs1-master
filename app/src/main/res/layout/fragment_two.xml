<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/textColorPrimary"
    tools:context="info.androidhive.materialtabs.fragments.TwoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="40dp">

        <ImageButton
            android:layout_marginTop="50sp"
            android:id="@+id/persegi"
            android:layout_width="146dp"
            android:layout_height="130dp"
            android:src="@drawable/persegi"
            android:textSize="20dp" />

        <ImageButton
            android:layout_marginTop="50sp"
            android:layout_marginLeft="20dp"
            android:id="@+id/persegipanjang"
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:src="@drawable/persegipanjang"
            android:textSize="20dp" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="40dp">

        <ImageButton
            android:id="@+id/segitiga"
            android:layout_width="187dp"
            android:layout_height="168dp"
            android:layout_gravity="center"
            android:src="@drawable/segitiga"
            android:textSize="17dp" />

        <ImageButton
            android:layout_marginLeft="10dp"
            android:id="@+id/lingkaran"
            android:layout_width="153dp"
            android:layout_height="153dp"
            android:layout_gravity="center"
            android:src="@drawable/lingkaran"
            android:textSize="17dp" />
    </LinearLayout>
</RelativeLayout>
